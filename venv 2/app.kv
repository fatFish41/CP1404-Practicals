# The kivy app contains a layout with orientation differed into several types - these have to be defined by BoxLayout.
# Afterwards, the size to be allocated to each layout is defined and named, as well as given a correct orientation.
# This is the kivy layout that is to be used when the app runs.


BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3
        Label:
            text: "Sort by: "
        Spinner:
            id: spinner
            text:app.current_sort
            values: app.sort_choices
            on_text: app.change_sort(spinner.text)

        Label:
            text: "Add New Place..."
        Label:
            text: "Name: "
        TextInput:
            id: place_name
        Label:
            text: "Country: "
        TextInput:
            id: place_country
        Label:
            text: "Priority: "
        TextInput:
            id: place_priority
        Button:
            text: "Add Place"
            on_release: app.add_places()

        Button:
            text: "Clear"
            on_press: app.Input_clear()
    BoxLayout:
        orientation: 'vertical'

        Label:
            id: status
            size_hint_y: 0.1
            text: app.text

        BoxLayout:
            id: entriesBox
            cols: 1
            orientation: "vertical"

        Label:
            id: status2
            size_hint_y: 0.1
            text: app.text2